{
    "compilerOptions": {
        "strict": true,

        "target": "es2020",
        "rootDir": "./",

        // commonjs, amd, system oder es6 (= es2015), esnext
        // - commonjs ist im Starter-Template von MS
        //
        // Beste Variante ist es6 (Vue esnext)
        // Mehr: http://www.geekabyte.io/2018/12/understanding-javascript-modules-as.html
        "module": "esnext",
        "moduleResolution": "node",

        "sourceMap": true,

        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "noEmitOnError": true,
        "strictNullChecks": true,
        "preserveConstEnums": false,
        "removeComments": false,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,

        "esModuleInterop": true,

        "jsx": "preserve",
        "importHelpers": true,

        "baseUrl": ".",
        "types": ["webpack-env", "jest", "node"],
        "paths": {
            "@/*": ["src/*"]
        },
        "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
        "plugins": [
            {
                "name": "typescript-tslint-plugin"
            }
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "tests/**/*.ts",
        "tests/**/*.tsx",
        // Damit werden die images erkannt
        "src/browser/**/*.ts",
        "src/site/images/typings.d.ts",
        "src/site/images"
    ],
    "exclude": ["node_modules"]
}
